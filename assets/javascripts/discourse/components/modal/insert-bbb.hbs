<DModal  
  @title={{i18n "bbb.modal.title"}}
  @closeModal={{@closeModal}}  
  class="insert-bbb-modal">
  <:body>
    <!-- Campo para Meeting Name con lÃ­mite de 30 caracteres -->
    <div class="control-group">
      <label>{{i18n "bbb.meetingName"}}</label>
      <Input @value={{this.meetingName}} @input={{this.updateMeetingName}} @placeholderKey="bbb.meetingName_placeholder" @maxLength="30" />
    </div>

    <!-- Texto de ayuda -->
    <div class="control-group">
      <label>
        Once created, your meeting room will be accessible through a button inserted in your post.
      </label>
    </div>
  </:body>
  
  <:footer>
    <DButton
      @class="btn-primary"
      @action={{this.insert}}
      @disabled={{this.insertDisabled}}
    >
      {{i18n "bbb.modal.insert"}}
    </DButton>
    <DButton 
      @class="btn-flat" 
      @action={{@closeModal}}
    >
      {{i18n "bbb.modal.cancel"}}
    </DButton>
  </:footer>
</DModal>
